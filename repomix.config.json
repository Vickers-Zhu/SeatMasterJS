{
  "include": ["**/*", "*.*"],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": ["**/*.log", "node_modules/**/*"]
  },
  "output": {
    "style": "plain",
    "filePath": "repomix-output.txt",
    "removeComments": true,
    "showLineNumbers": false,
    "topFilesLength": 0,
    "removeEmptyLines": true,
    "copyToClipboard": true,
    "git": {
      "sortByChanges": true
    }
  }
}
